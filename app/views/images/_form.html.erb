<%= form_for @image, html: { multipart: true } do |form| %>
  <% if @image.errors.any? %>
    <div>
      <h2 class = "error-count"><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul class = "error-list">
      <% @image.errors.full_messages.each do |message| %>
        <li class = "error-list-group"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, id: :image_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :image_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>