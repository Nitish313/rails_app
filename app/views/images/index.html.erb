<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table class = 'table'>
  <thead>
    <tr class = 'row'>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr class = 'row'>
        <% unless image.image.blank? %>
          <td><%= image_tag image.image.thumb.url %></td>
          <td><%= link_to image.name, image %></td>
          <td><%= link_to 'Show', image %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>  
      </tr>
    <% end %>  
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path, class:"btn" %>
